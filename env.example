# Environment
NODE_ENV=development

# Server
PORT=4000
API_PREFIX=/api/v1

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=realtor
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/realtor?schema=public

# CORS - multiple origins separated by comma
CORS_ORIGIN=http://localhost:3000,https://app.casalabia.dev,https://casalabia.dev,https://www.casalabia.dev

# App Config
APP_VERSION=0.1.0
MAX_UPLOAD_MB=25
FEATURES_LISTINGS=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
AI_RATE_LIMIT_PER_MINUTE=60

# AI Model Parameters
AI_TEMPERATURE=0.6
AI_TOP_P=0.8
AI_FREQ_PENALTY=0.2

# AI Content Generation
# Enable two-pass generation: draft -> refine (default: false)
AI_REFINE_ENABLED=false
# Quality threshold for triggering refine pass (0.0-1.0, default: 0.7)
AI_QUALITY_THRESHOLD=0.7

# Authentication & Sessions
APP_URL=https://api.example.com
FRONTEND_URL=https://app.example.com

# Cookie Configuration
COOKIE_DOMAIN=.example.com
COOKIE_SAMESITE=lax
COOKIE_SECURE=true

# Session Configuration
SESSION_IDLE_DAYS=7
SESSION_ABSOLUTE_DAYS=30

# Argon2 Configuration
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=1

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=5

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=casalabia-media
S3_LOGS_BUCKET=casalabia-logs

# CDN Configuration
CDN_BASE_URL=https://media.casalabia.dev

# Media Configuration
MEDIA_MAX_FILE_SIZE_MB=20
MEDIA_MAX_FILES_PER_LISTING=30
MEDIA_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/heic
MEDIA_UPLOAD_TIMEOUT_MINUTES=10
MEDIA_PRESIGNED_URL_EXPIRES_MINUTES=5

# Image Processing Configuration
IMAGE_QUALITY_WEBP=85
IMAGE_QUALITY_AVIF=75
IMAGE_SIZES=w1600,w1024,w512
IMAGE_FORMATS=webp,avif

# S3 Lifecycle Configuration (days)
UPLOADS_CLEANUP_DAYS=90
PROCESSED_CACHE_MAX_AGE_SECONDS=31536000
